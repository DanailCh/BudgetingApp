@model HouseholdMemberFormViewModel
@{
    ViewBag.Title = "Household";
    ViewBag.Message = TempData["Message"];
}


<h2 class="text-center">@ViewBag.Title</h2>
<h3 class="text-center">@ViewBag.Message</h3>
<hr />

<div class="text-center row">
    @foreach (var e in Model.Members)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@e.Name</h5>                
            </div>            
            <form class="input-group-sm " asp-controller="Household" asp-action="Delete" asp-route-id="@e.Id">
                <input type="submit" value="Delete" class="fs-6 btn btn-warning mb-3 w-100 p-3 fw-bold" />
            </form>
        </div>
    }
    @{
        if (Model.Members.Count() < 5) {
            <partial name="_AddMemberPartial" model="@Model" />
        }
    }    
    <a asp-controller="Summary" asp-action="Index" class="btn btn-warning mb-2 w-100 p-3 fw-bold">View summaries</a>
</div>

