@model BillFormModel
@{
    ViewBag.Title = "Edit Bill";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="@Model.BillTypeId" class="form-label-add-edit"></label>
                <select asp-for="@Model.BillTypeId" class="form-control" aria-required="true">
                    @foreach (var type in Model.BillTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.BillTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Cost" class="form-label-add-edit"></label>
                <input asp-for="@Model.Cost" class="form-control" aria-required="true"></input>
                <span asp-validation-for="@Model.Cost" class="text-danger"></span>
            </div>           

            <div class="row justify-content-around">
            <div class="col-md-5 d-grid gap-2">            
                <input class="btn btn-warning " type="submit" value="Edit" />
            </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}