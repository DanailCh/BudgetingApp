@model BillTypeFormViewModel
@{
    ViewBag.Title = "Custom BillTypes";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var e in Model.CustomBillTypes)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@e.Name</h5>                
            </div>

            
            <form class="input-group-sm " asp-controller="BillType" asp-action="Delete" asp-route-id="@e.Id">
                <div class="d-grid gap-2">
                    <input type="submit" value="Delete" class="btn btn-danger mb-2"
                       onclick="return confirm('Are you sure you want to delete billType: @e.Name')" />
                </div>
            </form>
        </div>
    }
    <partial name="_AddBillTypePartial" model="@Model" />    
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}