@model BillTypeFormViewModel
@{
    ViewBag.Title = "Custom BillTypes";
    ViewBag.Message = TempData["Message"];
}


<h1 class="text-center">@ViewBag.Title</h1>

@{
    if (ViewBag.Message != null)
    {
        <div class="row justify-content-center">
            <div class="col-6 alert alert-dismissible alert-success text-center">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @ViewBag.Message
            </div>
        </div>

    }
}
<hr />

<div class="text-center row">
    @foreach (var e in Model.CustomBillTypes)
    {
        <ul class="list-group">
            <li class="list-group-item d-flex list-group-item-info justify-content-between align-items-center">
                @e.Name
                <form class="btn btn-danger  " asp-controller="BillType" asp-action="Delete" asp-route-id="@e.Id">
                    <input type="submit" value="Delete" class="btn btn-danger "
                       onclick="return confirm('Are you sure you want to delete billType: @e.Name')" />
                </form>
            </li>
        </ul>
    }
    <partial name="_AddBillTypePartial" model="@Model" />    
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}